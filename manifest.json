{

    "manifest_version": 3,

    "name" : "PostQuantum",
    "description" : "Allows users to easily use OTP encryption so as to be unbreakable by quantum computers.",
    "version" : "0.2.0",

    "permissions" : ["contextMenus", "storage"],
    "host_permissions" : ["<all_urls>"],

    "icons": {
        
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"

      },

    "content_scripts" : [{

        "matches" : ["<all_urls>"],
        "js" : ["main.js"]

    }],

    "background" : {

        "service_worker" : "background.js"

    }

}